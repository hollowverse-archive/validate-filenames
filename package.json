{
  "name": "@hollowverse/validate-filenames",
  "version": "1.0.0",
  "description": "CLI for validating filenames in a directory according to customizable rules",
  "repository": "git@github.com:hollowverse/validate-filenames.git",
  "author": "Hollowverse",
  "license": "Unlicense",
  "scripts": {
    "test": "jest",
    "build": "tsc && babel bin -d bin",
    "dev": "tsc --watch",
    "version": "yarn build && git add -A bin",
    "postversion": "git push && git push --tags && yarn publish"
  },
  "private": false,
  "dependencies": {
    "@hollowverse/common": "hollowverse/common#export-common-binaries",
    "@types/node": "^8.0.53",
    "babel-polyfill": "^6.26.0",
    "commander": "^2.12.1",
    "lodash": "^4.17.4",
    "minimatch": "^3.0.4",
    "shelljs": "^0.7.8"
  },
  "devDependencies": {
    "@types/commander": "^2.11.0",
    "@types/jest": "^21.1.5",
    "@types/lodash": "^4.14.85",
    "@types/minimatch": "^3.0.1",
    "@types/shelljs": "^0.7.6",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
