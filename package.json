{
  "name": "@hollowverse/validate-filenames",
  "version": "0.0.0-Set-by-CI-when-publishing",
  "description": "CLI for validating filenames in a directory according to customizable rules",
  "repository": "git@github.com:hollowverse/validate-filenames.git",
  "author": "Hollowverse",
  "license": "Unlicense",
  "scripts": {
    "test": "jest",
    "build": "tsc && babel bin -d bin",
    "dev": "tsc --watch",
    "lint-staged": "lint-staged",
    "clown": "clown",
    "pre-push": "yarn test",
    "pre-commit": "yarn pretest",
    "validate-filenames": "validate-filenames --config validateFilenames.js",
    "check-ts": "tsc --project . --noEmit",
    "tslint": "tslint 'src/**/*.ts' --project .",
    "pretest": "run-p -c --aggregate-output tslint validate-filenames lint-staged 'clown check'",
    "set-version": "set-version",
    "jest": "jest --colors"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "validate-filenames": "./bin/validateFilenames.js"
  },
  "eslintIgnore": [
    "bin/**/*"
  ],
  "private": false,
  "lint-staged": {
    "**/*.ts{x,}": [
      "tslint -p ./tsconfig.json"
    ],
    "**/*.js{x,}": [
      "eslint"
    ],
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ],
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "**/!(package).json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "pre-push": "yarn pre-push",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.44",
    "@hollowverse/config": "^6.1.2",
    "commander": "^2.12.1",
    "lodash": "^4.17.4",
    "minimatch": "^3.0.4",
    "shelljs": "^0.7.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.44",
    "@babel/core": "^7.0.0-beta.44",
    "@babel/node": "^7.0.0-beta.44",
    "@babel/polyfill": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@hollowverse/clown": "^0.0.3",
    "@hollowverse/utils": "^5.0.1",
    "@hollowverse/validate-filenames": "^1.4.0",
    "@types/commander": "^2.11.0",
    "@types/jest": "^22.2.0",
    "@types/lodash": "^4.14.85",
    "@types/minimatch": "^3.0.1",
    "@types/node": "^8.0.53",
    "@types/shelljs": "^0.7.6",
    "eslint": "^4.18.2",
    "husky": "^0.15.0-rc.8",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.10.2",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "yarnhook": "^0.1.1"
  },
  "files": [
    "bin",
    "package.json"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    }
  },
  "engines": {
    "node": ">= 8.10"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  }
}
