{
  "name": "@hollowverse/validate-filenames",
  "version": "1.3.7",
  "description": "CLI for validating filenames in a directory according to customizable rules",
  "repository": "git@github.com:hollowverse/validate-filenames.git",
  "author": "Hollowverse",
  "license": "Unlicense",
  "scripts": {
    "test": "jest",
    "lint": "tslint './*.ts' 'src/**/*.ts' --project tsconfig.json",
    "build": "tsc && babel bin -d bin",
    "dev": "tsc --watch",
    "lint-staged": "lint-staged"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "validate-filenames": "./bin/validateFilenames.js"
  },
  "eslintIgnore": [
    "bin/**/*"
  ],
  "private": false,
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 4
          },
          "useBuiltIns": "entry"
        }
      ]
    ],
    "plugins": [
      "@babel/transform-runtime"
    ],
    "sourceMap": true
  },
  "lint-staged": {
    "**/*.ts{x,}": [
      "tslint -p ./tsconfig.json"
    ],
    "**/*.js{x,}": [
      "eslint"
    ],
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn test"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.40",
    "@hollowverse/common": "^3.2.4",
    "commander": "^2.12.1",
    "lodash": "^4.17.4",
    "minimatch": "^3.0.4",
    "shelljs": "^0.7.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.40",
    "@babel/polyfill": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@types/commander": "^2.11.0",
    "@types/jest": "^21.1.5",
    "@types/lodash": "^4.14.85",
    "@types/minimatch": "^3.0.1",
    "@types/node": "^8.0.53",
    "@types/shelljs": "^0.7.6",
    "babel-eslint": "^8.2.2",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.15.0-rc.8",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "rxjs-tslint-rules": "^3.14.0",
    "stylelint": "^9.1.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-no-unsupported-browser-features": "^2.0.0",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2"
  },
  "files": [
    "bin",
    "package.json"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
